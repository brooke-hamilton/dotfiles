{
	"name": "Ubuntu",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
	"features": {
		"ghcr.io/radius-project/devcontainer-features/radcli:latest": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"timonwong.shellcheck",
				"redhat.vscode-yaml"
			]
		}
