{
    "$schema": "https://aka.ms/dsc/schemas/v3/bundled/resource/manifest.json",
    "type": "BrookeHamilton.Setup/K3d",
    "version": "0.1.0",
    "description": "Ensure k3d is installed",
    "tags": ["Linux", "k3d", "Kubernetes"],
    "get": {
        "executable": "k3d.dsc.resource.sh",
        "args": ["get"],
        "input": "stdin"
    },
    "set": {
        "executable": "k3d.dsc.resource.sh",
        "args": ["set"],
        "input": "stdin",
        "implementsPretest": true,
        "handlesExist": true,
        "returns": "state"
    },
    "test": {
        "executable": "k3d.dsc.resource.sh",
        "args": ["test"],
        "input": "stdin",
        "returns": "state"
    },
    "export": {
        "executable": "k3d.dsc.resource.sh",
        "args": ["export"]
    },
    "exitCodes": {
        "0": "Success",
        "1": "Invalid input",
        "2": "Operation failed"
    },
    "schema": {
        "embedded": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "title": "K3d",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "version": {
                    "type": "string",
                    "description": "Installed version of k3d (read-only, returned by get)"
                },
                "_exist": {
                    "type": "boolean",
                    "description": "Whether k3d should be installed",
                    "default": true
                }
            }
        }
    }
}
